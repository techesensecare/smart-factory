<%= stylesheet_link_tag 'global-styles' %>

<% if @materias_prima.errors.any? %>
  <h2>Os erros a seguir impedem esse novo cadastro</h2>
  <ul>
    <% @materias_prima.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :materias_prima, url: materias_primas_path, local: true do |f|%>
<%#= simple_nested_form_for(componente, multipart: true) do |f| %>

  <section class="panel panel-default">
    <div class="panel-body flex-direction-column">
        <%= f.label :descricao, "Descrição" %>
        <%= f.text_field :descricao, class: 'col-md-3' %>
    </div>
    <div class="panel-body flex-direction-column">
        <%= f.label :unidade_de_medida, "Unidade de medida" %>
        <%= f.text_field :unidade_de_medida, class: 'col-md-3' %>
    </div>
    <div class="panel-body flex-direction-column">
        <%= f.label :tipo, "Tipo" %>
        <%= f.text_field :tipo, class: 'col-md-3' %>
    </div>
    <div class="panel-body flex-direction-column">
        <%= f.label :saldo, "Saldo" %>
        <%= f.number_field :saldo, class: 'col-md-3' %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Salvar", class: 'btn btn-primary' %>
      <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
      <%= link_to "Apagar", @materias_prima, 
                  method: :delete, 
                  class: 'btn btn-danger pull-right',
                  data: { confirm: 'Tem certeza que quer apagar?' } if @materias_prima.persisted? %> 
    </div>
  </section>

<% end %>